<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.escaperooms.creation.EscapeRoomsFragment">

    <Button
        android:id="@+id/newEscapeRoomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/layout_border_blue"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawableTint="#423F3F"
        android:paddingStart="5dp"
        android:text="Create New Escape Room"
        android:textAllCaps="false"
        android:textColor="#423F3F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/escapeRoomsBackButton"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/fragment_escape_rooms_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/escapeRoomsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#00FFFFFF"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="@+id/newEscapeRoomButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/newEscapeRoomButton"
        tools:ignore="SpeakableTextPresentCheck"
        app:tint="#000000" />
</androidx.constraintlayout.widget.ConstraintLayout>